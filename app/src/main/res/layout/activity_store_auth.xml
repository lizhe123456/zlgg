<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">
    <include layout="@layout/layout_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基本信息"
        android:textSize="14sp"
        android:textColor="@color/tv_999"
        android:padding="15dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公司全称"
            android:textSize="14sp"
            android:textColor="@color/tv_333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center" />
        <EditText
            android:id="@+id/etIdName"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:lines="1"
            android:hint="输入店名或公司名"
            android:layout_toRightOf="@+id/item1"
            android:inputType="text"
            android:maxLength="18"
            android:textColor="@color/tv_333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="@color/text_gray_light"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="详细地址"
            android:textSize="14sp"
            android:textColor="@color/tv_333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center" />
        <EditText
            android:id="@+id/etIdAddress"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:lines="1"
            android:hint="市、区、街道"
            android:layout_toRightOf="@+id/item2"
            android:inputType="text"
            android:maxLength="25"
            android:textColor="@color/tv_333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="@color/text_gray_light"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系方式"
            android:textSize="14sp"
            android:textColor="@color/tv_333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center" />
        <EditText
            android:id="@+id/etPhone"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:lines="1"
            android:hint="输入联系方式"
            android:layout_toRightOf="@+id/item3"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/tv_333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="@color/text_gray_light"
            android:textSize="13sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传营业执照"
        android:textSize="14sp"
        android:textColor="@color/tv_999"
        android:padding="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_positive"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/business_license"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="所传照片必须真实清晰才能通过审核"
        android:textSize="14sp"
        android:textColor="@color/tv_999"
        android:gravity="center_horizontal"
        android:padding="15dp" />
    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/goto_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:text="@string/submit_btn" />
</LinearLayout>